	<insert id="insertHotel">	
		<selectKey keyProperty="hotel_no" resultType="int" order="BEFORE">
			select hotel_seq.nextval from dual
		</selectKey>	
		insert into hotel(		hotel_no, 
										hotel_title, 
										hotel_content, 
										hotel_img,
										hotel_thumb, 
										hotel_category, 
										hotel_price,
										hotel_area)
		values(
										#{hotel_no}, 
										#{hotel_title}, 
										#{hotel_content}, 
										#{hotel_img_path},
										#{hotel_thumb_path}, 
										#{hotel_category}, 
										#{hotel_price},
										#{hotel_area})	
	</insert>
	
	<update id="updateHotel">
		update hotel set hotel_title=#{hotel_title}, 
								  hotel_content=#{hotel_content}, 
								  hotel_category=#{hotel_category}, 
								  hotel_price=#{hotel_price}, 
								  hotel_area=#{hotel_area}, 
								  hotel_price=#{hotel_price}, 
								  where hotel_no=#{hotel_no}
	
	</update>
	 
	<delete id="deleteHotel">	
	   	delete hotel where hotel_no=#{hotel_no}
	</delete>
	
	<select id="getHotel" resultType="com.tjoeunit.biz.hotel.HotelVO">
	
		select * from hotel where hotel_no=#{hotel_no}
		
	</select>
	
	<select id="getHotelList" resultType="com.tjoeunit.biz.hotel.HotelVO">
	
		select * from hotel 
	
	</select>
	
